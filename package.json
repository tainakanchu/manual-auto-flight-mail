{
  "name": "manual-auto-flight-mail",
  "version": "0.1.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "cd packages/manual-auto-flight-mail-app && pnpm dev",
    "build": "turbo build",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "turbo lint",
    "lint:prettier": "prettier --check '**/*.{ts,tsx,js,jsx,json,md,html}'",
    "type-check": "turbo type-check",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md}'"
  },
  "devDependencies": {
    "eslint": "8.49.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "5.3.3"
  },
  "volta": {
    "node": "20.10.0"
  }
}
